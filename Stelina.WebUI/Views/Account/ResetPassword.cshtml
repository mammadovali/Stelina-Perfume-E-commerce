@model ResetPasswordFormModel

@{
    ViewData["Title"] = "ResetPassword";
}

<div class="main-content main-content-login">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-trail breadcrumbs">
                    <ul class="trail-items breadcrumb">
                        <li class="trail-item trail-begin">
                            <a asp-action="index" asp-controller="home">Home</a>
                        </li>
                        <li class="trail-item trail-end active">Reset password</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="content-area col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="site-main">
                    <h3 class="custom_blog_title">Reset password</h3>
                    <div class="customer_login">
                        <div class="row">


                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="login-item">
                                    <h5 class="title-login">New password</h5>
                                    <form asp-controller="Account" asp-action="ResetPassword" method="post" class="login">

                                        <input type="hidden" asp-for="Email" />
                                        <input type="hidden" asp-for="Token" />

                                        @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
                                        {
                                            <p class="form-row form-row-wide alert alert-danger text-white">
                                                    @ViewBag.Message
                                            </p>
                                        }

                                        <p class="form-row form-row-wide">
                                            <label class="text">Password</label>
                                            <input type="password"
                                                   asp-for="Password"
                                                   class="input-text" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </p>
                                        <p class="form-row form-row-wide">
                                            <label class="text">Confirm password</label>
                                            <input type="password"
                                                   asp-for="ConfirmPassword"
                                                   class="input-text" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </p>
                                        <p class="form-row">
                                            <input type="submit"
                                                   class="button-submit"
                                                   value="Reset password" />
                                        </p>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

