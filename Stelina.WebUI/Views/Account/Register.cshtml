@model RegisterFormModel

@{
    ViewData["Title"] = "Signin";
}

<div class="main-content main-content-login">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-trail breadcrumbs">
                    <ul class="trail-items breadcrumb">
                        <li class="trail-item trail-begin">
                            <a href="index.html">Home</a>
                        </li>
                        <li class="trail-item trail-end active">Authentication</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="content-area col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="site-main">
                    <h3 class="custom_blog_title">Authentication</h3>
                    <div class="customer_login">
                        <div class="row">





                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="login-item">
                                    <h5 class="title-login">Register now</h5>
                                    <form method="post" asp-action="Register" class="register">

                                        <p class="form-row form-row-wide">
                                            <label class="text">Name</label>
                                            <input asp-for="Name"  title="name" type="text" class="input-text" />
                                            <span asp-validation-for="Name" class="text-danger ml-15"></span>
                                        </p>
                                        <p class="form-row form-row-wide">
                                            <label class="text">Surname</label>
                                            <input asp-for="Surname" title="surname" type="text" class="input-text" />
                                            <span asp-validation-for="Surname" class="text-danger ml-15"></span>
                                        </p>
                                        <p class="form-row form-row-wide">
                                            <label class="text">Your email</label>
                                            <input asp-for="Email"
                                                   title="email"
                                                   class="input-text" />
                                                   <span asp-validation-for="Email" class="text-danger ml-15"></span>
                                        </p>
                                        <p class="form-row form-row-wide">
                                            <label class="text">Password</label>
                                            <input asp-for="Password"
                                                   title="pass"
                                                   type="password"
                                                   class="input-text" />
                                                   <span asp-validation-for="Password" class="text-danger ml-15"></span>
                                        </p>
                                        <p class="form-row form-row-wide">
                                            <label class="text">Confirm password</label>
                                            <input asp-for="ConfirmPassword"
                                                   title="pass"
                                                   type="password"
                                                   class="input-text" />
                                                   <span asp-validation-for="ConfirmPassword" class="text-danger ml-15"></span>
                                        </p>
                                        <p class="">
                                            <input type="submit"
                                                   class="button-submit"
                                                   value="Register Now" />
                                        </p>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

