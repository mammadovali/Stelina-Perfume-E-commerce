@model ForgotPasswordFormModel

@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="main-content main-content-login">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-trail breadcrumbs">
                    <ul class="trail-items breadcrumb">
                        <li class="trail-item trail-begin">
                            <a asp-action="index" asp-controller="home">Home</a>
                        </li>
                        <li class="trail-item trail-end active">Forgot password</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="content-area col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="site-main">
                    <h3 class="custom_blog_title">Reset password</h3>
                    <div class="customer_login">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="login-item">
                                    <h5 class="title-login">Reset your password</h5>
                                    <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="login">

                                        @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
                                        {
                                            <p class="form-row form-row-wide alert alert-danger text-white">
                                                @ViewBag.Message
                                            </p>
                                        }

                                        <p class="form-row form-row-wide">
                                            <label class="text">Your email</label>
                                            <input title="username"
                                                   asp-for="Email"
                                                   id="email-input-forgot"
                                                   class="input-text" />
                                            @*<span asp-validation-for="Email" class="alert alert-danger text-white"></span>*@
                                        </p>
                                        <p class="form-row">
                                           @* <input type="submit"
                                                   class="button-submit"
                                                   value="login" />*@
                                            <input type="submit" value="Reset Password" class="button-submit" />
                                        </p>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
