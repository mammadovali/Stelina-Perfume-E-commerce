@model IEnumerable<Product>

@foreach (var item in Model)
{
    var imagePath = item.Images.FirstOrDefault()?.Name;

    <li class="product-item col-lg-4 col-md-6 col-sm-6 col-xs-6 col-ts-12 style-1">
        <div class="product-inner equal-element">
            @if (item.CreatedDate > DateTime.Now.AddDays(-7))
           {
               <div class="product-top">
                <div class="flash">
                    <span class="onnew">
                        <span class="text"> new </span>
                    </span>
                </div>
            </div>
           }
            <div class="product-thumb" data-id="@item.Id">
                <div class="thumb-inner">
                    <a asp-action="details" asp-route-id="@item.Id">
                        <img src="~/uploads/images/@imagePath"
                         alt="img" />
                    </a>
                    <div class="thumb-group">
                        <div class="yith-wcwl-add-to-wishlist yith-wcwl-add-to-wishlist-@item.Id">
                            <div class="yith-wcwl-add-button">
                                <a href="javascript:addToFavorites(@item.Id)"  class="@(item.Id)full-heart-icon" >Add to Wishlist</a>
                            </div>
                        </div>
                        <div class="loop-form-add-to-cart">
                            <button class="single_add_to_cart_button button" type="button" data-product-id="@item.Id" onclick="addToBasket(event)">
                                Add to cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="product-info">
                <h5 class="product-name product_title">
                    <a asp-action="details" asp-route-id="@item.Id">@item.Name</a>
                </h5>
                <div class="group-info">
                    <div class="stars-rating">
                        <div class="star-rating">
                            <span class="star-3"></span>
                        </div>
                        <div class="count-star">(3)</div>
                    </div>
                    <div class="price">
                        <ins> @item.Price ₼ </ins>
                    </div>
                </div>
            </div>
        </div>
    </li>
}


