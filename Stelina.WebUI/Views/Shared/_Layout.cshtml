            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Log in</h1>
                </div>
                <div class="modal-body">
                    <form id="loginModal" method="post">
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Username or E-mail</label>
                            <input type="text" class="form-control" id="recipient-name" name="UserName">
                        </div>
                        <div class="mb-3">
                            <label for="message-text" class="col-form-label">Password</label>
                            <input type="password" class="form-control" id="message-text" name="Password" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" form="loginModal" class="btn btn-primary">Log in</button>
                    <a asp-action="register" asp-controller="account" class="btn btn-warning">Register</a>
                </div>
            </div>
        </div>
