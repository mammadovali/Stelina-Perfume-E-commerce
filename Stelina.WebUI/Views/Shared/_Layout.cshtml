    <script class="removable">
        $(document).ready(function (){
            $(".newsletter-subscribe").submit(function (e) {
                e.preventDefault();

                let formData = new FormData(e.currentTarget);


                $.ajax({
                    url: '@Url.Action("Subscribe","Home")',
                    type: "POST",
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response){

                        if(response.error == false){
                            toastr["success"](response.message, "Success")
                        }

                        if(response.error == true){
                            toastr["error"](response.message, "Error");
                        }

                        e.currentTarget.reset();
                    }
                });
            });
        });
    </script>


    <script class="removable">
        $(document).ready(function() {
            $.ajaxSetup({
                statusCode: {
                    401: function() {
                        $('#modalLoginForm').modal({
                            backdrop: 'static',
                            keyboard: true
                        }).modal('show');
                    }
                }
            });

              $("#postComment")
              .add(".add-to-cart")
              .add(".sign-in-shopping-cart")
              .add("div[data-rate]")
              .add(".single_add_to_cart_button").click(function(){
                   $("#modalLoginForm").addClass("in")
                   $("#modalLoginForm").css("background", "rgba(0, 0, 0, 0.44)")
                   $(".modal.fade .modal-dialog").css("transform", "translate(0, 10%)")
              })

            $('#loginModal').submit(function(e) {
                e.preventDefault();

                var formData = new FormData(e.currentTarget);

                $.ajax({
                    url: '@Url.Action("Signin", "Account", values: new{area=""})',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function(response) {
                        if(response.error == false){
                             $('#modalLoginForm').modal('hide');
                             toastr.success(response.message);
                             location.reload();
                        }
                        else
                        {
                            toastr.error(response.message, "Error");
                        }

                    }
                });
            });

        })
    </script>

    <script class="removable">

         $.ajaxSetup({

             statusCode:{

                200: function(res){
                    if(res.error == false && res.length > 0){
                        toastr.success(res.message, "Success");
                    }
                },

                400: function(res){
                    toastr.warning("Invalid request", "Error");
                },

                401: function(res){
                    toastr.warning("You should log in first", "Attention!");
                },

                403: function(res){
                    toastr.warning("You are not allowed for this operation", "Attention!t");
                },

                404: function(res){
                    toastr.warning("Information was not found", "Attention!");
                },

                500: function(res){
                    toastr.warning("Server error");
                }

             }

        });
    </script>

    <script class="removable">
        $(document).ready(function () {
            $('.removable').remove();
        });
    </script>



