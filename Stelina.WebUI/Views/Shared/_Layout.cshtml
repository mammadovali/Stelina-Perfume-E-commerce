                                urban garden inspiration
                                </div>
                                <input type="email"
                                class="input-text email email-newsletter"
                                placeholder="Your email letter" />
                                <button type="submit" class="button btn-submit submit-newsletter">
                                SUBSCRIBE
                                </button>
                                </form>*@
                        </div>
                    </div>
                    <div class="box-footer col-xs-12 col-sm-4 col-md-4 col-lg-4">
                        <div class="stelina-custommenu default">
                            <h2 class="widgettitle">Quick Menu</h2>
                            <ul class="menu">
                                <li class="menu-item">
                                    <a asp-action="index" asp-controller="home">Home</a>
                                </li>
                                <li class="menu-item">
                                    <a asp-controller="shop" asp-action="index">Shop</a>
                                </li>
                                <li class="menu-item">
                                    <a asp-controller="blog" asp-action="index">Blog</a>
                                </li>
                                <li class="menu-item">
                                    <a asp-action="about" asp-controller="home">About</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="box-footer col-xs-12 col-sm-4 col-md-4 col-lg-4 hidden-xs">
                        <div class="stelina-newsletter style1">
                            <div class="newsletter-head">
                                <h3 class="title">Newsletter</h3>
                            </div>
                            <form class="newsletter-form-wrap newsletter-subscribe">
                                <div class="list">
