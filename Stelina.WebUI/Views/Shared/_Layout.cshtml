<body class="home">
    <div id="preloader"></div>
    <header class="header style7">
        <div class="top-bar">
            <div class="container">
                <div class="top-bar-left">
                    <div class="header-message">Welcome to our online store!</div>
                </div>
                <div class="top-bar-right">

                    @if (@User.Identity.IsAuthenticated)
                    {
                        <div class="header-language account">
                            <div class="stelina-language stelina-dropdown">
                                <i class="fa fa-user"></i>
                                <a href="#"
                               class="active language-toggle"
                               data-stelina="stelina-dropdown">
                                    <span> @User.GetPrincipalName() </span>
                                </a>
                                <ul class="stelina-submenu">
                                     <li class="switcher-option">
                                        <a asp-action="signin" asp-controller="account">
                                            <span> Log in with another account </span>
                                        </a>
                                    </li>
                                     <li class="switcher-option">
                                        <a asp-action="register" asp-controller="account">
                                            <span> Register </span>
                                        </a>
                                    </li>
                                     <li class="switcher-option">
                                        <a asp-action="forgotpassword" asp-controller="account">
                                            <span> Change password </span>
                                        </a>
                                    </li>
                                    <li class="switcher-option">
                                        <a asp-action="logout" asp-controller="account">
                                            <span> Log out </span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                    @if (@User.Identity.IsAuthenticated == false)
                    {
                        <ul class="header-user-links">
                            <li>
                                <a asp-action="signin" asp-controller="account">Login</a>
                            </li>
                            <li>
                                <a asp-action="register" asp-controller="account">Register</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </div>
        <div class="container">
            <div class="main-header">
                <div class="row">
                    <div class="col-lg-3 col-sm-4 col-md-3 col-xs-7 col-ts-12 header-element">
                        <div class="logo">
                            <a asp-action="index" asp-controller="home">
                                <img src="~/assets/images/logo.png" alt="img" />
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-7 col-sm-8 col-md-6 col-xs-5 col-ts-12">

                        <partial name="_SearchProducts" />

                    </div>
                    <div class="col-lg-2 col-sm-12 col-md-3 col-xs-12 col-ts-12">
                        <div class="header-control">

                            @await Component.InvokeAsync("BasketInfo")



                            <div class="block-account block-header stelina-dropdown">
                                <a asp-action="wishlist" asp-controller="shop" style="transition: all 0.15s linear;">
                                    <i class="fa fa-heart"></i>
                                </a>
                            </div>

                            <a class="menu-bar mobile-navigation menu-toggle" href="#">
                                <span></span>
                                <span></span>
                                <span></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="header-nav-container rows-space-20">
            <div class="container">
                <div class="header-nav-wapper main-menu-wapper">

                    @*@await Component.InvokeAsync("Categories")*@

                    <partial name="_Navbar" />
                </div>
            </div>
        </div>




    </header>
    <div class="header-device-mobile">
        <div class="wapper">
            <div class="item mobile-logo">
                <div class="logo">
                    <a asp-action="index" asp-controller="home">
                        <img src="~/assets/images/logo.png" alt="img" />
                    </a>
                </div>
            </div>
            <div class="item item mobile-search-box has-sub">
                <a href="#">
                    <span class="icon">
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </span>
                </a>
                <div class="block-sub">
                    <a href="#" class="close">
                        <i class="fa fa-times" aria-hidden="true"></i>
                    </a>
                    <div class="header-searchform-box">
                        <form class="header-searchform" asp-action="SearchProducts" asp-controller="Shop">
                            <div class="searchform-wrap">
                                <input type="text"
                                       class="search-input input-search"
                                       name="SearchTerm"
                                       placeholder="Enter keywords to search..." />
                                <input type="submit" class="submit button" value="Search" />
                            </div>
                            <ul class="search-results home-two" style="position: absolute; left: 0px; top: 49px; display: none;"></ul>
                        </form>
                    </div>
                </div>
            </div>
            <div class="item menu-bar">
                <a class="mobile-navigation menu-toggle" href="#">
                    <span></span>
                    <span></span>
                    <span></span>
                </a>
            </div>
        </div>
    </div>


    @RenderBody()


