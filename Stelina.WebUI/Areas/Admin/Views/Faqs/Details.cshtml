@model Faq

@{
    ViewData["Title"] = "Details";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>FAQ details</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="Dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="index">All FAQs</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <span>Details</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <div class="card">
        <div class="card-block">

            <div method="post">
                <div class="form-group row">
                    <label asp-for="Question" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10" ">
                        <p class="form-control">
                            @Model.Question
                        </p>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Answer</label>
                    <div class="col-sm-10">
                        <div class="form-control" style="overflow: auto; min-height:150px">
                            @Html.Raw(Model.Answer)
                        </div>

                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-12 d-flex justify-content-end">
                        @if (User.HasAccess("admin.faqs.edit"))
                        {
                          <a asp-action="Edit" class="btn btn-warning mr-2" asp-route-id="@Model.Id">Edit</a>
                        }
                        <a asp-action="Index" class="btn btn-info mr-2">Geri</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Page-body end -->
