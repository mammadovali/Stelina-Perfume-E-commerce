@model Product

@{
    ViewData["Title"] = "Edit";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">

        <div class="col">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="Dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="index">All products</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <span>Details</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <div class="card">
        <div class="card-block">

            <div>
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="form-control" style="overflow:auto; min-height:100px";>
                            @Model.Name
                        </div>
                    </div>
                </div>
                 <div class="form-group row">
                    <label asp-for="StockKeepingUnit" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="form-control" style="overflow:auto; min-height:100px";>
                            @Model.StockKeepingUnit
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="form-control" style="overflow:auto; min-height:100px";>
                            @Model.Price ₼
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Image</label>
                    <div class="col-sm-10">
                        <label class="image-viewer" style="background-image:url(/uploads/images/@Model.Images.FirstOrDefault(i => i.IsMain == true)?.Name)"></label>
                    </div>
                </div>
                 <div class="form-group row">
                    <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="form-control" style="overflow:auto; min-height:50px;">
                            @Model.Brand.Name
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Category" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="form-control" style="overflow:auto; min-height:50px;">
                            @Model.Category.Name
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-12 d-flex justify-content-end">
                        <a asp-action="edit" asp-route-id="@Model.Id" class="btn btn-warning mr-2 ">Edit</a>
                        <a asp-action="index" class="btn btn-info">Cancel</a>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>
<!-- Page-body end -->
