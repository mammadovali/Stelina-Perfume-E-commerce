@model AboutEditCommand

@{
    ViewData["Title"] = "Edit";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>About company edit</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="Dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="index">About company</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <span>Edit</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <div class="card">
        <div class="card-block">

            <form method="post" autocomplete="off" enctype="multipart/form-data">
                <div class="form-group row">
                    <label asp-for="BoldText" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="BoldText" class="form-control" />
                        <span asp-validation-for="BoldText" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="NormalText" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="NormalText" class="form-control" />
                        <span asp-validation-for="NormalText" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Image</label>
                    <div class="col-sm-10">
                        <label class="image-viewer" for="image" style="background-image:url(/uploads/images/@Model.ImagePath)"  ></label>
                        <input id="image" name="image" type="file" hidden />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="FreeDeliveryText" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <textarea asp-for="FreeDeliveryText" class="form-control"></textarea>
                        <span asp-validation-for="FreeDeliveryText" class="text-danger"></span>
                    </div>
                </div>

                

                <div class="form-group row">
                    <label asp-for="MoneyGuaranteeText" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <textarea asp-for="MoneyGuaranteeText" class="form-control"></textarea>
                        <span asp-validation-for="MoneyGuaranteeText" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="OnlineSupportText" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <textarea asp-for="OnlineSupportText" class="form-control"></textarea>
                        <span asp-validation-for="OnlineSupportText" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-12 d-flex justify-content-end">
                        <input hidden asp-for="Id" />

                        <button class="btn btn-primary mr-2">Save</button>
                        <a asp-action="index" class="btn btn-info">Cancel</a>

                    </div>
                </div>



            </form>
        </div>
    </div>
</div>
<!-- Page-body end -->
@section addjs{
<script class="removable" src="~/lib/ckeditor5/ckeditor.min.js"></script>
<script class="removable" src="~/lib/select2/dist/js/select2.full.min.js"></script>

<script>
    let reader = new FileReader();
    reader.addEventListener("load", function(){
        let imageViewer = document.querySelector(".image-viewer");

        imageViewer.setAttribute("style", `background-image:url(${reader.result})`);
    });


    document.getElementById("image").addEventListener("change", function(e){
        const selectedFile = e.currentTarget.files[0];
        reader.readAsDataURL(selectedFile);
    });

</script>
}

@section addcss{
<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
}



